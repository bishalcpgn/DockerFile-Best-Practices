FROM node:20-alpine AS base


# -----------------------------
# Dependencies stage
# Installs node_modules only once and caches them
# -----------------------------
FROM base AS deps
WORKDIR /app

# Copy only files needed to install dependencies
# This maximizes Docker layer caching
COPY package.json pnpm-lock.yaml ./

# Install system compatibility libs required by some native Node modules
# Enable Corepack to make pnpm available without global installs
# Install dependencies strictly from the lockfile for reproducibility
RUN apk add --no-cache libc6-compat \
 && corepack enable pnpm \
 && pnpm install --frozen-lockfile


# -----------------------------
# Builder stage
# Compiles the Next.js application
# -----------------------------
FROM base AS builder
WORKDIR /app

# Reuse the already-installed dependencies from the deps stage
# This avoids reinstalling node_modules on every build
COPY --from=deps /app/node_modules ./node_modules

# Copy the full application source code
COPY . .

# Disable Next.js telemetry during build
ENV NEXT_TELEMETRY_DISABLED=1

# Build the Next.js app (expects output: 'standalone' in next.config.js)
RUN corepack enable pnpm && pnpm run build


# -----------------------------
# Runner stage (production image)
# Contains only the minimal runtime output
# -----------------------------
FROM base AS runner
WORKDIR /app

# Set production environment variables
ENV NODE_ENV=production \
    NEXT_TELEMETRY_DISABLED=1 \
    PORT=3000 \
    HOSTNAME=0.0.0.0

# Create a non-root user for security
RUN addgroup --system --gid 1001 nodejs \
 && adduser --system --uid 1001 nextjs

# Copy static public assets
COPY --from=builder /app/public ./public

# Copy the standalone Next.js server output
# --chown ensures files belong to the non-root user
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Switch to non-root user for runtime security
USER nextjs

# Document the port the app listens on
EXPOSE 3000

# Start the Next.js standalone server
# server.js is generated by `next build`
CMD ["node", "server.js"]
